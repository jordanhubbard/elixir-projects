defmodule Hangman.Application do
  @moduledoc false
  use Application

  def start(_type, _args) do
    import Supervisor.Spec
    
    children = [
      { Hangman.Server, [] },
    ]

    options = [
      name: Hangman.Supervisor,
      strategy: :simple_one_for_one
    ]
    
    Supervisor.start_link(children, options)
  end
